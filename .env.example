# Server configuration
NODE_ENV=development
PORT=5000
APP_BASE_URL=https://app.example.com
DATABASE_URL=postgres://user:password@host:5432/database
SESSION_SECRET=replace-with-strong-random-secret

# CORS and security
CORS_ALLOWED_ORIGINS=http://localhost:5173
CONTENT_SECURITY_POLICY=default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; connect-src 'self' https://api.stripe.com; img-src 'self' data:; font-src 'self'
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Stripe payments
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# AI configuration
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-2.0-flash-exp
AI_MIN_INTERVAL_MS=1500

# Meta channel configuration
META_ACCESS_TOKEN=your-meta-access-token
META_APP_SECRET=your-meta-app-secret
META_VERIFY_TOKEN=your-meta-verify-token
# Comma separated map of business/page IDs to shop IDs (e.g. 1234567890:1,0987654321:2)
META_SHOP_MAP=
# Optional default shop ID if no mapping exists
META_DEFAULT_SHOP_ID=

# Email notifications
RESEND_API_KEY=your-resend-api-key
RESEND_FROM_EMAIL=notifications@example.com

# Google Calendar integration
GOOGLE_SERVICE_ACCOUNT_EMAIL=service-account@project.iam.gserviceaccount.com
GOOGLE_SERVICE_ACCOUNT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\\n...\\n-----END PRIVATE KEY-----\\n"
GOOGLE_CALENDAR_ID=primary

# Google Sheets integration
GOOGLE_SHEETS_SPREADSHEET_ID=your-spreadsheet-id
GOOGLE_SHEETS_PRODUCTS_RANGE=Products!A1:F
GOOGLE_SHEETS_SERVICES_RANGE=Services!A1:E
